<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.debongz.nextldsaadmin.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
           android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="NEXTLD SALES ADMIN"
            android:textColor="@color/appcolor"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:hint="Username"
                android:paddingLeft="5dp"
                android:background="@drawable/bg_edit_text"
                android:theme="@style/MyEditTextTheme"/>
            <EditText
                android:layout_below="@+id/user_name"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"
                android:hint="Password"
                android:theme="@style/MyEditTextTheme"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_below="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:background="@color/appcolor"
                android:text="SIGN IN"/>
            <TextView
                android:id="@+id/trbl"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btn_login"
                android:layout_width="wrap_content"
                android:text="Having trouble loging in?"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/trbl"
                android:layout_width="wrap_content"
                android:text="contact Admin debongz091@gmail.com"
                android:layout_height="wrap_content"
                android:autoLink="email"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
