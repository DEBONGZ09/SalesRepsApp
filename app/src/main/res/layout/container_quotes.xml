<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="@drawable/border"
    android:padding="5dp"
    android:id="@+id/quote_line"
    >
<RelativeLayout
    android:id="@+id/topdiv"
    android:orientation="horizontal"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/txtqname"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Falguni Super Market Boksburg"
        />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/txtqtotal"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="R 1150.99"
        />

</RelativeLayout>

           <RelativeLayout
               android:layout_marginTop="3dp"
               android:layout_below="@+id/topdiv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_alignParentStart="true"
                   android:layout_alignParentLeft="true"
                   android:id="@+id/txtqdate"
                   android:padding="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:text="12/01/2018"
                   />
               <TextView
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:id="@+id/txtqstatus"
                   android:padding="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/blue"
                   android:text="Open"
                   />

           </RelativeLayout>




            <TextView
                android:id="@+id/txtqid"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00e0e009r993"
                />
    <TextView
        android:id="@+id/txtqcustNumber"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00e0e009r993"
        />
    <TextView
        android:id="@+id/txtqcustAddr"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00e0e009r993"
        />





    </RelativeLayout>




